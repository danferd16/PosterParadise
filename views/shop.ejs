<!DOCTYPE html>
<html lang="en">
<head>
  <title>Poster Palace</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="./css/styles.css">
  <link rel="stylesheet" href="./css/styles.scss">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <style>
    a:visited{color:blue;}
    em {font-size:12px;}
    @viewport {
      width: device-width ;
      zoom: 1.0 ;
    }
  </style>

   <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
          <div class="container-fluid ms-5 me-5">
            <a class="navbar-brand" href="/home">Poster Paradise</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mynavbar">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mynavbar">
              <ul class="navbar-nav me-auto">
                <li class="nav-item">
                  <a class="nav-link" href="/home">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="/cart">Cart</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link active" href="/shop">Shop</a>
                </li>
                <li class="nav-item">
					<a class="nav-link" href="/logout">Logout</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
</head>
<body>

<div class="container">
  	<br>
	<h2 style = "text-align: center; margin-left: auto; margin-right: auto">Posters List</h2>
	<br>
  <table border="1" style="margin-left:auto; margin-right:auto; width: 80%; text-align: center">
  <tr>
    <th>Name</th>
    <th>Genre</th>
    <th>Price</th>
    <th>Image</th>
	<th>-----</th>
  </tr>
  <% posters.forEach(function(poster) { %>
  <tr>
    <td><%= poster.name %></td>
    <td><%= poster.genre %></td>
    <td><%= poster.price %></td>
    <td><img src="<%= poster.image %>" width="100"></img></td>
	<td>
		<button class="btn btn-primary add-to-cart" data-id="<%= poster.id %>">Add to cart</button>
	</td>
  </tr>
  <% }); %>
</table>
</div>
<script>
$(function() {
  $('.add-to-cart').click(function() {
    var id = $(this).data('id');
    $.post('/cart/add', { id: id }, function(data) {
      alert('Item added to cart!');
    });
  });
});
</script>
</body>
</html>
